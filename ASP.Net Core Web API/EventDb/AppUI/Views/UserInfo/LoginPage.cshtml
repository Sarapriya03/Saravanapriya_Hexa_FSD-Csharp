@model AppUI.Models.UserInfo

@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers

<html>
<head>
    <title>Login Page</title>
</head>
<body>
    <form asp-route="ValidateUser" method="post">
        <div>
            <label asp-for="EmailId">Email Id:</label>
            <input type="email" asp-for="EmailId" placeholder="Enter an Email Id">
        </div>
        <div>
            <label asp-for="Password">Password:</label>
            <input type="password" asp-for="Password" placeholder="Enter a Password">
        </div>
        <div>
            <label asp-for="Role">Role:</label>
            <select asp-for="Role">
                <option value="Admin" selected>Admin</option>
                <option value="Participant">Participant</option>
            </select>
        </div>
        <div>
            <input type="submit" value="Login">
        </div>
    </form>
</body>
</html>

