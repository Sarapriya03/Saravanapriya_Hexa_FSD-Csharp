@model ClientsDirectory.Models.ClientInfo
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Add New Client";
}

<h2 class="text-primary">Add New Client</h2>

<form asp-route="SaveClient" method="post">
    <div>
        <label asp-for="ClientId">Client ID:</label>
        <input asp-for="ClientId"/>
    </div>
    <div>
        <label asp-for="CompanyName">Company Name:</label>
        <input asp-for="CompanyName"/>
    </div>
    <div>
        <label asp-for="WebUrl">Web URL:</label>
        <input asp-for="WebUrl"/>
    </div>
    <div>
        <label asp-for="Email">Email:</label>
        <input asp-for="Email"/>
    </div>
    <div>
        <label asp-for="Category">Category:</label>
        <input asp-for="Category"/>
    </div>
    <div>
        <label asp-for="Standard">Standard:</label>
        <input asp-for="Standard"/>
    </div>
    <div>
        <button type="submit">Save:</button>
        <a class="btn btn-secondary" asp-route="List">Cancel</a>
    </div>
</form>
