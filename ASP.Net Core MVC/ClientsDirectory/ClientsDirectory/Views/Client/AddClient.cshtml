@model ClientsDirectory.Models.ClientInfo


@{
    ViewData["Title"] = "Add New Client";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <environment include="Development" exclude="Production">
        <link href="/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    </environment>
    <environment include="Production" exclude="Development">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet"
              integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT" crossorigin="anonymous" />
    </environment>
</head>
<body>
    <div class="container mt-4">
        <h2 class="text-primary mb-4">Add New Client</h2>

        <form asp-route="SaveClient" method="post">
            <div>
                <label asp-for="ClientId" class="form-label">Client ID</label>
                <input asp-for="ClientId" class="form-control" />
            </div>

            <div>
                <label asp-for="CompanyName" class="form-label">Company Name</label>
                <input asp-for="CompanyName" class="form-control" />
            </div>

            <div>
                <label asp-for="WebUrl" class="form-label">Web URL</label>
                <input asp-for="WebUrl" class="form-control" />
            </div>

            <div>
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control" />
            </div>

            <div>
                <label asp-for="Category" class="form-label">Category</label>
                <div>
                    <select class="form-control" asp-for="Category" asp-items="@ViewBag.Categories">
                        <option selected value="">--Select--</option>
                    </select>
                </div>
            </div>

            <div>
                <label asp-for="Standard" class="form-label">Standard</label>
                <div>
                    <select class="form-control" asp-for="Standard" asp-items="@ViewBag.Standards">
                        <option selected value="">--Select--</option>
                    </select>
                </div>
            </div>

            <div>
                <button type="submit" class="btn btn-success">Save</button>
                <a class="btn btn-secondary ms-2" asp-route="List">Cancel</a>
            </div>
        </form>
    </div>
</body>
</html>
