@model List<ClientsDirectory.Models.ClientInfo>


<html>
<head>
    <meta charset="utf-8" />
    <title>Contact List</title>

    <environment include="Development" exclude="Production">
        <link href="/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    </environment>
    <environment include="Production" exclude="Development">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet"
              integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT" crossorigin="anonymous" />
    </environment>
</head>
<body>
	<div class="container mt-5">
    <h2 class="mt-5">All Clients</h2>

    <a asp-route="AddClient" class="btn btn-primary mb-3">Add New Client</a>


<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Client ID</th>
            <th>Company Name</th>
            <th>Web URL</th>
            <th>Email</th>
            <th>Category</th>
            <th>Standard</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var client in Model)
        {
            <tr>
                <td>@client.ClientId</td>
                <td>@client.CompanyName</td>
                <td><a href="@client.WebUrl">@client.WebUrl</a></td>
                <td>@client.Email</td>
                <td>@client.Category</td>
                <td>@client.Standard</td>
                        <td>
                            <a class="btn btn-info btn-sm" asp-action="GetDetailsByClientId" asp-route-id="@client.ClientId">ViewById</a>
                            <a class="btn btn-info btn-sm" asp-action="GetDetailsByCompanyName" asp-route-name="@client.CompanyName">ViewByCompanyName</a>
                            <a class="btn btn-info btn-sm" asp-action="GetDetailsByEmail" asp-route-email="@client.Email">ViewByEmail</a>
                            <a class="btn btn-info btn-sm" asp-action="GetDetailsByCategory" asp-route-category="@client.Category">ViewByCategory</a>
                            <a class="btn btn-info btn-sm" asp-action="GetDetailsByStandard" asp-route-standard="@client.Standard">ViewByStandard</a>
                        </td>
            </tr>
        }
    </tbody>
</table>
        <a class="btn btn-secondary mt-3" asp-route="ShowAllClientDetails">Show All Client Details</a>
    </div>
</body>
</html>
